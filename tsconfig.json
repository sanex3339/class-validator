{
    "version": "2.0.0",
    "compilerOptions": {
        "outDir": "build/es5",
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "declaration": true,
        "types": [
            "assertion-error",
            "chai",
            "chai-as-promised",
            "es6-shim",
            "gulp",
            "mocha",
            "node",
            "orchestrator",
            "promises-a-plus",
            "q",
            "sinon"
        ]
    },
    "exclude": [
        "build",
        "node_modules"
    ]
}
